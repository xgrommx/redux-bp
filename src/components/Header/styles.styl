@keyframes bounce {
  0% {
    transform: scale(1)
  }
  70% {
    transform: scale(1.3)
  }
  100% {
    transform: scale(1)
  }
}


$beige = rgba(235, 228, 229, 0.91)
$blue = #000080

.logo
  text-align center
  font-size 1.5em
  padding 1.5em 0

.wrapper
  padding 0 2em
  margin 0 auto
  max-width 900px

.small
  display inline-block
  font-size .7em
  width 39px
  height 40px

.caption
  font-size .8em
  padding .2em .6em

.emoji
  vertical-align middle
  font-size 1.5em
  margin-left 4px
  animation bounce 1.3s infinite ease-out
  transform-origin: 56.6% 56.6%;

